<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <CheckBox
        android:id="@+id/adp_for_expandable_import_contacts_parent_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/adp_for_expandable_import_contacts_parent_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:textColor="@color/colorTextViewTextBlack"
        android:layout_toStartOf="@+id/adp_for_expandable_import_contacts_parent_itv"
        android:layout_toEndOf="@+id/adp_for_expandable_import_contacts_parent_checkbox"
        style="@style/fontSize_standard_17sp"
        android:layout_toLeftOf="@+id/adp_for_expandable_import_contacts_parent_itv"
        android:layout_toRightOf="@+id/adp_for_expandable_import_contacts_parent_checkbox" />

    <ImageView
        android:id="@+id/adp_for_expandable_import_contacts_parent_itv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_chevron_right_24dp"
        android:contentDescription="@string/app_name"
        android:layout_alignParentRight="true" />


</RelativeLayout>
