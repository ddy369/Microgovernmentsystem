<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/adp_for_lv_magazine_list_select_rl">

    <TextView
        android:id="@+id/adp_for_lv_magazine_list_select_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_toStartOf="@+id/adp_for_lv_magazine_list_select_ibt"
        style="@style/fontSize_standard_15sp"
        android:textColor="@color/colorTextViewTextBlack"
        android:layout_marginLeft="12dp"
        android:layout_toLeftOf="@+id/adp_for_lv_magazine_list_select_ibt" />

    <ImageButton
        android:id="@+id/adp_for_lv_magazine_list_select_ibt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:src="@drawable/ic_hook_18dp"
        android:background="@color/colorImageButtonBackgroundTransparent"
        android:contentDescription="@string/app_name"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true" />

</RelativeLayout>
