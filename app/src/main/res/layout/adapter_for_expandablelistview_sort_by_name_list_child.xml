<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingEnd="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="20dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/frg_sort_by_name_expandable_child_tv_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/frg_sort_by_name_expandable_child_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        style="@style/fontSize_standard_17sp"
        android:layout_toEndOf="@+id/frg_sort_by_name_expandable_child_tv_picture"
        android:textColor="@color/colorTextViewTextBlack"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/frg_sort_by_name_expandable_child_tv_picture" />

    <TextView
        android:id="@+id/frg_sort_by_name_expandable_tv_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/colorActivityGrayText"
        android:layout_toEndOf="@+id/frg_sort_by_name_expandable_child_tv_picture"
        android:layout_below="@+id/frg_sort_by_name_expandable_child_tv_name"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/frg_sort_by_name_expandable_child_tv_picture" />

</RelativeLayout>